<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/username"
        android:gravity="center"
        android:textSize="@dimen/big_text_size"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_found_pairs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/found_pairs"
        android:textSize="@dimen/text_size"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_username"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/attempts"
        android:textSize="@dimen/text_size"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@id/tv_username"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" >

        <LinearLayout
            android:id="@+id/row_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/container_1"
                android:tag="card1"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:name="com.deimoshall.matchprogramminglanguages.BackCardFragment"
                tools:layout="@layout/fragment_back_card" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/container_2"
                android:tag="card2"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:name="com.deimoshall.matchprogramminglanguages.BackCardFragment"
                tools:layout="@layout/fragment_back_card" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/container_3"
                android:tag="card3"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/container_2"
                android:name="com.deimoshall.matchprogramminglanguages.BackCardFragment"
                tools:layout="@layout/fragment_back_card" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/container_4"
                android:tag="card4"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:name="com.deimoshall.matchprogramminglanguages.BackCardFragment"
                tools:layout="@layout/fragment_back_card" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/container_5"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:name="com.deimoshall.matchprogramminglanguages.BackCardFragment"
                tools:layout="@layout/fragment_back_card" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/container_6"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:name="com.deimoshall.matchprogramminglanguages.BackCardFragment"
                tools:layout="@layout/fragment_back_card" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/container_7"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/container_2"
                android:name="com.deimoshall.matchprogramminglanguages.BackCardFragment"
                tools:layout="@layout/fragment_back_card" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/container_8"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:name="com.deimoshall.matchprogramminglanguages.BackCardFragment"
                tools:layout="@layout/fragment_back_card" />

        </LinearLayout>

        <LinearLayout
