                android:name="com.deimoshall.matchprogramminglanguages.BackCardFragment"
                tools:layout="@layout/fragment_back_card" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/container_10"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:name="com.deimoshall.matchprogramminglanguages.BackCardFragment"
                tools:layout="@layout/fragment_back_card" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/container_11"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/container_2"
                android:name="com.deimoshall.matchprogramminglanguages.BackCardFragment"
                tools:layout="@layout/fragment_back_card" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/container_12"
