                android:layout_weight="1"
                android:name="com.deimoshall.matchprogramminglanguages.BackCardFragment"
                tools:layout="@layout/fragment_back_card" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/container_13"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:name="com.deimoshall.matchprogramminglanguages.BackCardFragment"
                tools:layout="@layout/fragment_back_card" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/container_14"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:name="com.deimoshall.matchprogramminglanguages.BackCardFragment"
                tools:layout="@layout/fragment_back_card" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/container_15"
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/container_2"
                android:name="com.deimoshall.matchprogramminglanguages.BackCardFragment"
                tools:layout="@layout/fragment_back_card" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/container_16"
                android:layout_width="60dp"
